@model MVC_News.Models.NewsItem

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewsItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="News" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgSrc" class="control-label"></label>
                <input asp-for="ImgSrc" class="form-control" type="file"/>
                <span asp-validation-for="ImgSrc" class="text-danger"></span>
            </div>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

